{{#if userInSession}}
<div class="container">
    <div class="row">
        <div class="w-100 my-md-3 pl-md-3" style="">
            <div class="profile bg-info mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden"  >
                <h2>Welcome, {{ userInSession.username }}!</h2>
                <a href="/userProfile"><img  class="bd-placeholder-img rounded-circle" width="300" height="300" src="images/profile.png"></a>
                    <title>Placeholder</title>
                    <react width="100%" height="100%" fill="#777"></react>
                    <text x="50%" y="50%" fill="#777" dy=".3em"></text>
                </img>
                <h4><strong>Email: {{userInSession.email}}</strong> </h4>
            </div>
        </div>



        <div class="section w-100">
                <div class="container-fluid w-100">
                    {{#if reservas}}
                    <div id="nav-tabs  "> 
                            <div class="d-flex justify-content-center ">
                                 <h3><strong>Reservas</strong></h3>
                            </div>
                       
                        <div class="">
                            
                            {{#each reservas}}
                            <div class="col-md-6  ">
                                {{#with hostId}}
                                <div class="card card-nav-tabs">

                                    <div class="card-header card-header-primary d-flex justify-content-center">
                                        <h3><strong>{{this.title}}</strong></h3>
                                    </div>

                                    <div class="card-body">
                                        <div class="tab-content">
                                            <img class="card-img-top" src="{{this.imgPath}}" alt="host" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                                            <h5><strong>Localização:</strong> {{this.local}}</h5>
                                {{/with}}
                                            <h5 class="card-text"><strong>Quantidade de hospedes:</strong>  {{this.hostId.qntHosp}}</h5>
                                            <h5><strong>Price: </strong> R${{this.totalValue}},00</h5>
                                            <h5><strong>Checkin: </strong>{{this.startDate}}</h5>
                                            <h5><strong>Checkout: </strong>{{this.endDate}}</h5>
                                        </div>
                                    </div>
                  
                                </div>
                            </div>  
                        </div> 
                            {{/each}}
                            {{else}}
                            <div role="main" class="w-25 d-flex justify-content-center  inner cover text-center m-auto " style="width:200px;">
                                <h1 class=" title cover-heading">NO BOOKINGS IN AGENDA</h1>
                            </div>
                            {{/if}}
                </div>
            </div>
        </div>
        



    </div>
</div>

{{else}}
    <p>Still no logged in user, sorry!</p>
{{/if}}