<div class="container">
    {{#with host}}
        <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
            <img class="card-img-top" src="/images/hostExemple.jpg" alt="host" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
        </div>

        <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
            <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
                <h2>{{this.local}}</h2>
                <h4>Tipo de host: {{this.espaco}} | Qntd de hospedes: {{this.qntHosp}}</h4>
            </div>
            <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden"> 
                <h5>Preco: {{this.preco}}/noite</h5>
                <p>Checkin/Checkout: </p>
                <a href="/search/{{this.id}}/reserva" type="button" class="btn btn-sm btn-outline-secondary">
                    Reservar
                </a>
            </div>
        </div>
        
    {{/with}}
</div>
