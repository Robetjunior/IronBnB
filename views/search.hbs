<section class="jumbotron text-center">
     <form class="inner cover " action="/search" method="GET">
                <div class="form-inline justify-content-center" style="background-color: rgba(7, 0, 0, 0.4); border-radius: 10px">
                    <div class="col-md-4 mr-4  justify-content-center" >
                     <label for="validationCustom01"  class="" style="color:white ;font-size:10px ;margin:3px 2px 2px; ">Localização</label>
                    <input name="search" type="text" class="form-control "  id="search" style="bottom:2px"! placeholder="Para onde você quer ir?" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                    <div class="col-md-4 ml-4" style="left:10%">
                        <label for="validationCustom01" style="color:white ;font-size:10px ;margin:3px 2px 2px; ">Hóspedes</label>
                    <input name="number" type="number" id="number" class=" form-control" in="0" max="10" type="number" style="width:25px" id="local" placeholder="0">
                    </div>
                    <div class="input-group-append">
                        <button class="btn_white btn btn-outline-primary fa fa-search mt-3"  type="submit"></button>
                    </div>
                </div>
            </form>
</section>

{{!-- Filtro da Pesquisa de Hosts --}}
<div class="corpo">
<div class="album py-5 ">
    <div class="container " >
        <div class="row">
            {{#each host}}
                <div class="col-md-4" >
                    <div class="card mb-4 shadow-sm" style="	border-radius: 10%;">
                       <div class="card_new card-img-top" style="	border-radius: 10%;">
                            <div class=" card-body imgbox" style="	border-radius: 10%;">
                                <img class="img_host" src="/images/{{this.imgPath}}" style="	border-radius: 10%;" width="350px" height="450px" alt="tah">
                            </div>
                            <div class="content">

                                <h3 class="ml-4">{{this.title}}</h3>
                            <h3><small><strong>R$ {{this.preco}}</strong>/noite</small></h3>

                                <h5 class="tag mt-4">{{this.espaco}}</h5>
                                {{#each comodidades}}
                                    <h5 class="tag mt-4" style="overflow-wrap: break-word"> {{this}}</h5></span>
                                {{/each}}
                                <h5 class="card-text tag mt-4">Internet</h5>
                                <h5 class="card-text mt-2"><span class="tag">Qnt de hospedes: {{this.qntHosp}}</span></h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/search/{{this.id}}" type="button" class="btn btn-sm btn-primary tag p-2">
                                        View
                                    </a>    
                                </div>
                            </div>
                        </div>
                    </div>                   
                </div>
            {{/each}}
        </div>
    </div>
</div> 


