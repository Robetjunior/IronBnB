{{!-- Filtro da Pesquisa de Hosts --}}
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#each host}}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="/images/hostExemple.jpg" alt="host" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                        
                        <div class="card-body">
                            <h3>{{this.local}}</h3>
                            <p id="description">{{this.descricao}}</p>
                            <p class="card-text">{{this.espaco}}</p>
                            <p>
                                <ul class="card-text tags">
                                    <li class="tag">Praia</li>
                                    <li class="tag">Ar Condicionado</li>
                                    <li class="tag">Internet</li>
                                </ul>
                            </p>
                            <p class="card-text"><span class="tag">Qnt de hospedes: {{this.qntHosp}}</span></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/search/{{this.id}}" type="button" class="btn btn-sm btn-outline-secondary">
                                        View
                                    </a>
                                </div>
                                <small><strong>R$ {{this.preco}}</strong>/noite</small>
                            </div>
                            <div id="expander">
                                <div id="expander-pipe-container">
                                    <div class="ion-chevron-up" id="expander-arrow">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>


