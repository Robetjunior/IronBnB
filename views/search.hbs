<section class="jumbotron text-center">
    <form class="inner cover" action="/search" method="GET">
        <div class="input-group mb-3">
            <input name="search" type="text" class="form-control" id="local" placeholder="Procure por uma localidade" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <label for="number">
                <input class="form-check-inline search" id="number" name="number" type="number" min="0" max="10"  style="width: 50%">
                <span class=" p-1">NÂº de Hospedes</span>
            </label> 
            <div class="input-group-append">
                <button class="btn_white btn btn-outline-primary fa fa-search " type="submit"></button>
            </div>
        </div>
    </form>
</section>

{{!-- Filtro da Pesquisa de Hosts --}}
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#each host}}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="/images/hostExemple.jpg" alt="host" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                        
                        <div class="card-body">
                            <h3>{{this.local}}</h3>
                            <div class="expander">
                                <div id="expander-pipe-container">
                                    <div class="ion-chevron-up expander-arrow" >
                                    </div>
                                </div>
                            </div>
                            <p class="description">{{this.descricao}}</p>
                            <p class="card-text">{{this.espaco}}</p>
                            <p>
                                <ul class="card-text tags">
                                    <li class="tag">Praia</li>
                                    <li class="tag">Ar Condicionado</li>
                                    <li class="tag">Internet</li>
                                </ul>
                            </p>
                            <p class="card-text"><span class="tag">Qnt de hospedes: {{this.qntHosp}}</span></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/search/{{this.id}}" type="button" class="btn btn-sm btn-outline-secondary">
                                        View
                                    </a>
                                </div>
                                <small><strong>R$ {{this.preco}}</strong>/noite</small>
                            </div>
                            
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>


